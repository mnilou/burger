<div class="container bg">

  <div class="row">
    <div class="center col-sm-12">
      <img src="assets/images/burger.jpg" alt="Burger App">
      <h1>Devour-a-Burger</h1>
      <p></p>
    </div>
  </div>

  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>{{burger_name}}
      <button class="change-devoured" data-devoured="{{devoured}}" data-id="{{id}}">EAT ME!
      </button>
    </li>
    {{/unless}}
    {{/each}}
  </ul>

  <h2>Burgers that are devoured!</h2>

  <ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>{{burger_name}}</li>
    {{/if}}
    {{/each}}
  </ul>

  <h2>Add a burger</h2>

  <form action="/burgers/create" method="POST" class="create-form">

    <div class="form-group">
      <label for="burger">Burger Name:</label>
      <input type="text" id="burger" name="burger_name">
    </div>

    <button type="submit">Add Burger</button>
  </form>