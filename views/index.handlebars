<div class="container bg">

  <div class="row">
    <div class="center col-sm-12">
      <img src="assets/images/burger.jpg" alt="Burger App">
      <h1>Burger App</h1>
      <p></p>
    </div>
  </div>

  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>{{burger_name}}
      <button class="devoured" data-devoured="{{devoured}}" data-id="{{id}}">EAT ME!
      </button>
    </li>
    {{> burger-block devoured=false}}
    {{/unless}}
    {{/each}}
  </ul>

  <h2>Burgers that are devoured!</h2>

  <ul>
    {{#each burgers}}
    {{#if devoured}}
    <li> <button class="devoured" data-devoured="{{devoured}}" data-id="{{id}}">Wasn't That Yummy?
      </button></li>
    {{> burger-block devoured=true}}
    {{/if}}
    {{/each}}
  </ul>

  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="burger">Burger Name:</label>
      <input type="text" id="burger" name="name">
    </div>

